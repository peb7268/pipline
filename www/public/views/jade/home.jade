extends ./layout.jade

block body
    ul#agenda(ng-controller="HomeController as HomeCtrl")
        #daySelector
            ul
                li.prev
                    i.fa.fa-chevron-left
                li.date
                    |Jan 22, 2015
                li.next
                    i.fa.fa-chevron-right
        form#addTodo
            input(type="text" placeholder="New todo.." autofocus)

        ul#controls
            li
                a
                    |Todo
            li
                a
                    |Contact
            li
                a
                    |Appointment

        li.item.completed
            a(ng-click='AppCtrl.updateItem()') Wipe down the office
        li.item
            a(ng-click='AppCtrl.updateItem()') Buy Czara food
        li.item
            a(ng-click='AppCtrl.updateItem()') Go to office tomorrow